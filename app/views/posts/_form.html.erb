<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body, input_html: {rows: 10} %>
    <%= f.input :str_tags, lable: 'Tags separated by spaces'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
